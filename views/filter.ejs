<% include partials/header/header %>
<% include partials/header/nav %>

<!-- Main Content -->
<div class="container mt-5 pt-5">

<div class="row">
<div class="col-md-9">
<h1><%= header %></h1>
<% articles.forEach((article)=> { %>
<div class="card mb-5">
    <img class="card-img-top article-img" src="/img/uploads/articles/<%= article.image%>" alt="">
    <div class="card-body">
        <div class="post-preview">
            <a href="/blog/<%=article.slug%>">
                <h2 class="post-title"><%= article.titre%></h2>
                <h5 class="post-subtitle"><%= article.extrait%></h5>
            </a>
            <p class="post-meta">Publi√© par
                <a href="/blog/auteur/<%= article.auteur%>"><%= article.auteur%></a>
                <span>le <%= moment(article.date_modification).locale('fr').format('lll')%></span><br>
            </p>
            <a href="/blog/categorie/<%=article.categorie%>"><span class="mt-2 category-text badge badge-primary index-cat"><%= article.categorie %></span></a>
            <% if (article.allowComments) { %><span class="mt-2 category-text badge badge-success index-cat"><%= article.commentaires.length %> <span class="fa fa-comment"></span></span> <% } %>
        </div>
    </div>
</div>
<% }) %>

</div>

<aside class="col-md-3 blog-sidebar">
